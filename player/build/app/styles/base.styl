@import 'variables'
@import 'nib'

html
  overflow-x hidden

body
  font 12px $primaryFont
  word-wrap break-word
  -webkit-user-select none
  user-select none

html, button, input, select, textarea
  font-family $primaryFont
  color $primaryColor

button
  font-size 12px
  text-align center
  font-weight bold
  border-radius 2px
  background $gray3
  border 0
  color #fff
  padding 10px 20px

  &:hover
    background #6f6c69

  &:active
    background #625f5c

  &.action
    background #385455

    &:hover
      background #2e4545

    &:active
      background #243636

  &:disabled, &:disabled:hover, &:disabled:active
    cursor default
    background #f0f0ee
    color $gray2

.embed-frame
  margin-left -20px
