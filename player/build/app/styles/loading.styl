.loading-overlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background white
  z-index 20000

  .loading-content
    height 50px
    margin -25px 0 0 0
    width 100%
    text-align center
    font-size 20px
    position absolute
    top 50%

    .spin-holder
      display inline-block
      width 32px
      height 32px
      position relative
      top 8px
      margin-right 7px

      .spinner
        top 16px !important
        left 16px !important
