{
  "name": "versal-sdk",
  "description": "Versal Gadget SDK with command-line interface.",
  "version": "0.6.3",
  "author": "Versal team <support@versal.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/Versal/sdk.git"
  },
  "bin": {
    "versal": "bin/versal"
  },
  "engines": {
    "node": ">= 0.10.0"
  },
  "scripts": {
    "test": "mocha test/*.coffee --require blanket --reporter travis-cov || mocha test/*.coffee --require blanket --reporter spec",
    "html-coverage": "mocha test/*.coffee --require blanket --reporter html-cov > coverage.html",
    "copy-player": "cp -r ../player/dist/ ./html/player/"
  },
  "config": {
    "blanket": {
      "pattern": ".coffee",
      "data-cover-never": "node_modules",
      "loader": "./node-loaders/coffee-script"
    },
    "travis-cov": {
      "threshold": 94
    }
  },
  "preferGlobal": true,
  "dependencies": {
    "async": "~0.2.6",
    "chalk": "~0.4.0",
    "coffee-script": "~1.7.1",
    "cors": "~2.2.0",
    "css": "~1.4.4",
    "express": "~3.2.6",
    "formidable": "~1.0.14",
    "fs-extra": "~0.6.3",
    "fstream": "~0.1.25",
    "minimatch": "~0.2.14",
    "optimist": "~0.3.5",
    "prompt": "~0.2.12",
    "requirejs": "~2.1.11",
    "shortid": "~1.0.9",
    "stylus": "~0.37.0",
    "tmp": "0.0.23",
    "underscore": "~1.5.1",
    "request": "~2.34.0"
  },
  "devDependencies": {
    "blanket": "^1.1.6",
    "chai": "~1.5.0",
    "mocha": "~1.9",
    "sinon": "~1.7.2",
    "superagent": "~0.14.9",
    "supertest": "~0.7.1",
    "tmp": "0.0.23",
    "travis-cov": "^0.2.5"
  }
}
