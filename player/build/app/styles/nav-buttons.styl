@import 'nib'
@import 'variables'

arrow_states(direction)
  i
    background-image url('../assets/img/nav_arrows/arrow_' + direction + '_normal.png')

  &:hover i
    background-image url('../assets/img/nav_arrows/arrow_' + direction + '_hover.png')

  &:active i
    background-image url('../assets/img/nav_arrows/arrow_' + direction + '_active.png')

.nav
  margin 0

  .nav-buttons
    position absolute
    bottom 5px
    width 730px
    padding 2px 0 2px 20px

    a
      color $gray2
      cursor pointer
      padding 8px
      position relative

      &:hover
        text-decoration none
        background-color $hoverBg

      i
        display inline-block
        background-size 8px 15px
        height 15px
        width 8px
        position relative
        top 4px

    .previous-button
      float left
      arrow_states left
      left -8px
      padding 2px 15px 6px 12px

    .next-button, .finish-button
      float right
      arrow_states right
      left 8px
      padding 2px 12px 6px 15px

    .finish-button
      i
        margin-left 10px
    .previous-button, .next-button
      .nav-button-text
        display none

.course.embed-frame
  .previous-button, .next-button
    .nav-button-text
      display inline

  .previous-button
    float left
    arrow_states left
    padding 2px 15px 6px 35px
    line-height 20px
    i
      float left
      margin-right 10px

  .next-button, .finish-button
    float right
    arrow_states right
    left 8px
    padding 2px 12px 6px 15px
    i
      margin-left 10px
