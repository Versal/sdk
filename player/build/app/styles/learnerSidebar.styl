@media (max-width: 1023px)
  .learnerSidebar
    display none

.learnerSidebar

  ul.lesson-list
    list-style none
    margin 0
    padding 0

    li.lesson
      margin 0
      padding 10px
      border-bottom 1px solid $border
      background white
      font-size 13px
      overflow-x hidden
      white-space nowrap
      text-overflow ellipsis
      cursor pointer
      transition background 200ms ease-in-out

      &:hover
        background $gray1

      &:active
        background $gray1

      &.active-lesson
        font-weight bold

      &.disabled-lesson
        cursor default
        background $gray2
