@import 'variables'
@import 'nib'

.gadgetContent.section-header
  font 18px $primaryFont
  width 100%
  box-sizing border-box
  padding 8px 0
  background-color #fff

  &.vs-sticky-stuck
    background-color rgba(255, 255, 255, 0.9)
    width 730px

  .section-content
    overflow-x hidden
    white-space nowrap

    &:empty
      min-height 1em

    &:empty:after
      color #999
      content attr(placeholder)

  .section-fadeout
    position absolute
    top 0
    right 0
    height 100%
    width 30px
    background linear-gradient(left, rgba(255,255,255,0) 0%, white 75%)


