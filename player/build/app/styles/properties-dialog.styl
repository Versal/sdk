@import 'variables'

$arrow-width  = 8px
$arrow-height = 12px

$errorOrange = rgb(219, 81, 31)

.properties-dialog
  position absolute
  top 10px

  width 250px
  left -250px - 25px
  margin-left -($arrow-width)

  border 1px solid $gray2
  background-color #fff
  box-shadow $boxShadow
  color $gray4

  z-index 900

  .properties-dialog-arrow
    position absolute
    width 0
    height 0
    top 9px
    right        -($arrow-width)
    margin-top    ($arrow-height/2)
    border-top    ($arrow-height/2) solid transparent
    border-bottom ($arrow-height/2) solid transparent
    border-left   $arrow-width      solid $gray1

  .properties-dialog-header
    font 16px $primaryFont
    padding 10px
    background-color $gray1

  fieldset
    margin 0
    padding 10px
    border none

  label
    font 14px $primaryFont

  input, textarea, select, .bbf-radio, .bbf-checkboxes, .bbf-date, .bbf-datetime
    font 14px $primaryFont
    margin-bottom 0

  .bbf-field
    margin-bottom 15px

    &:last-child
      margin-bottom 5px

  .bbf-field
    position relative

    .bbf-editor > ul
      list-style none
      margin 0
      padding 0

      label
        display inline-block
        margin-left 8px
        line-height 20px
        width 200px
        vertical-align top

  .bbf-date, .bbf-datetime
    select
      display inline
      width auto
      margin 0

  .bbf-datetime .bbf-date
    margin-bottom 5px

  .input-color-color
    width: 15px;
    padding: 2px 4px;

  .input-color-text
    width: 170px;
    margin-left: 10px;

  .sp-replacer

    .sp-preview
      margin: 0
      width: 15px

    .sp-dd
      display: none

  .clayer-slider
    margin-left 5px
    padding 15px 0

  .clayer-slider-knob-value
    font 11px $primaryFont
    width 50px
    margin-left -19px
    text-align center
    margin-top -15px
    color $gray3

  .bbf-error-tooltip-container
    position absolute
    top 50%
    left 230px
    width 700px
    margin-top -20px
    display none

  .bbf-error .bbf-error-tooltip-container
    display block

  // TODO: use "info-block info-block-red" from design-theme
  .properties-dialog-error-count
    display inline-block
    float right
    font-size 10pt
    padding 3px 10px
    margin-top -2px
    color white
    background-color rgb(200, 14, 7)
    border-radius 2px

/* This is a hack to property sheets checkbox */
.bbf-editor.hacked-for-checkbox
  label
    float right
    width 90%
  input
    float left
    width 8%

