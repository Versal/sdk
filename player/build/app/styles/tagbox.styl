@import 'variables'

// TODO: Integrate this file with Versal/Tags somehow, see Versal/Tags/readme.mdown

$gray = $gray3
$grayLight = $gray2
$grayLighter = $gray1
$white = $gray1

.tagbox
  width 220px

  ul
    li
      .tag
        font 13px/20px $primaryFont
        background-color $grayLighter

      &.new input, &.new input:focus
        font 14px/20px $primaryFont

      &:hover
        .tag
          color $white
          background-color $grayLight
        .delete
          color $white

      &.selected
        .tag
          color $white
          background-color $gray
        .delete
          color $white

.autocomplete
  li
    font 13px/20px $primaryFont

  li.selected, li.over
    background-color $gray
    color $white
