@import 'variables'
@import 'nib/gradients'
@import 'nib/vendor'

.gadget
  position relative
  margin-left 28px

  .course:not(.editable) &
    &.empty
      display none

  .placeholder
    display none

  .gadgetContent
    border 1px solid #fff
    padding 2px
    overflow hidden
    position relative

  .course.editable &

    .gadgetContent
      border 1px solid #fff
      background #fff

    .placeholder
      cursor default
      font-family $primaryFont
      font-size 17px
      -moz-user-select none
      -webkit-user-select none

    &:hover:not(.editing)
      .toolbar:not(.blocked) li
        opacity 1 !important
      .gadgetContent:not(.blocked)
        transition border-color 300ms ease-in
        border 1px solid $gray7
    &.editing
      .gadgetContent:not(.blocked)
        transition border-color 300ms ease-in
        border 1px solid $gray3

    .toolbar:hover ~ .gadgetContent
      border 1px solid $gray2 !important

    &.empty:not(.editing)
      background-color $gray0
      color $gray2
      margin-bottom 8px
      padding 20px
      text-align center
      border 1px solid white

      &:hover:not(.blocked)
        border 1px solid $gray7

      .placeholder
        display block

      .wrapper
        display none
      .gadgetContent
        display none

  &:last-of-type
    margin-bottom 0

.toolbar
  -moz-user-select none
  -webkit-user-select none
  position absolute
  top -5px
  left -28px
  width 25px
  height 90px
  list-style-type none
  padding 0px
  margin 0px
  cursor pointer

  .course:not(.editable) &
    display none

  li
    transition all 200ms ease-in
    opacity 0
    position absolute
    padding 5px
    color $gray7
    font-size 21px

    &:hover
      color $gray2

    &:active
      color $gray3

    &.drag
      cursor move

    &.disabled
      display none

  &.dragging
    .drag
      cursor move

  .edit
    top 22px

  .delete
    top 44px

.toolbar:hover, .editing .toolbar
  li
    opacity 1 !important
    z-index 15

.editing .toolbar
  li.edit
    color $gray3

.toolbar.blocked
  visibility hidden !important

.alert-warn
  position absolute
  top 0px
  left 0px
  width 100%
  height 100%
  padding 0px
  margin 0px
  color $gray3
  background-color rgba(242,241, 237, 0.9)
  z-index 200

  .alert-controls
    position relative
    top 50%
    margin-top -35px

  &.minimized .alert-controls
    margin-top -16px

    .alert-msg
      display inline

    button
      padding-top 6px
      padding-bottom 6px

.alert-error
  background-color $gray0
  color $gray2
  padding 20px

    .alert-controls
      margin-top 10px

.alert-error, .alert-warn
  font-family $primaryFont
  border-radius 0
  text-align center
  border 0

  .delete-button
    display none

    .editable &
      display inline-block

.course.embed-frame
  .gadgets
    margin-right 10px

/* specific to gadgets with no toggleEdit */
.gadget.noToggleEdit
  .edit
    display none
  .delete
    top 22px
  .toolbar
    opacity 0
  .gadgetContent
    border 1px solid #fff !important
  &:hover
    .toolbar
      opacity 1 !important
    .gadgetContent
      border 1px solid $gray7 !important


