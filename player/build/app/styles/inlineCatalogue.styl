@import 'variables'

$itemBorder = 1px solid $border

.inlineCatalogue
  h2
    background none
    text-align left
    font-size 20px

    button
      float right
      margin-top 5px

  ul
    list-style none
    margin 0
    padding 0
    border-bottom $itemBorder

    li
      margin 0
      padding 8px
      background white
      cursor pointer
      position relative
      border $itemBorder
      border-bottom 0
      height 52px

      &:after
        clear both

      &:hover
        opacity 0.8

      *
        overflow hidden
        text-overflow ellipsis
        white-space nowrap

      .icon
        height 52px
        width 52px
        float left
        margin-right 10px

      .title
        font 14px $primaryFont
        color $gray4

      .author
        font-size 12px
        color $gray2

      .version
        position absolute
        bottom 5px
        right 8px
        font 12px $primaryFont
        color $gray2
